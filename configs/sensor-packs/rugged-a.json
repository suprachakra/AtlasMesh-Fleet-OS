{
  "id": "rugged-a",
  "name": "Rugged Pack A",
  "class": "Rugged",
  "description": "Harsh environment pack for mining and defense operations",
  "vehicle_classes": ["ClassC_Mining", "ClassD_Defense"],
  "sensors": {
    "lidar": [
      {
        "model": "Velodyne HDL-32E",
        "count": 6,
        "fov": 360,
        "range_m": 200,
        "refresh_rate_hz": 20,
        "mount": "roof_perimeter",
        "ingress_protection": "IP67"
      }
    ],
    "camera": [
      {
        "model": "FLIR Blackfly S",
        "count": 12,
        "resolution": "1920x1200",
        "fov": 110,
        "refresh_rate_hz": 60,
        "night_vision": true
      }
    ],
    "radar": [
      {
        "model": "Continental ARS540",
        "count": 8,
        "range_m": 300,
        "refresh_rate_hz": 20
      }
    ],
    "imu": {
      "model": "KVH 1750",
      "drift_deg_per_hr": 0.5
    },
    "gps": {
      "model": "Trimble BX992",
      "frequency_hz": 20,
      "rtk": true
    },
    "supplemental": [
      {
        "type": "ultrasonic",
        "model": "SICK UM30",
        "count": 16
      },
      {
        "type": "thermal",
        "model": "FLIR A65",
        "count": 4
      }
    ]
  },
  "calibration": {
    "schedules": ["daily", "monthly"],
    "procedures": [
      "lidar_warmup_check",
      "camera_lens_cleaning",
      "radar_alignment"
    ],
    "tools": ["calibration_target", "thermal_chamber"]
  },
  "fusion": {
    "latency_budget_ms": 45,
    "algorithms": [
      "ekf",
      "point_cloud_fusion",
      "radar_lidar_tracking"
    ],
    "confidence_thresholds": {
      "obstacle_detection": 0.9,
      "terrain_classification": 0.85
    }
  },
  "telemetry": {
    "sampling_hz": 20,
    "compression": "lz4",
    "data_contract": "contracts/telemetry/rugged_a.avsc"
  },
  "validation": {
    "hil_tests": [
      "hil_rugged_weather",
      "hil_radar_dropout"
    ],
    "track_tests": [
      "desert_track_run",
      "vibration_shake_table"
    ],
    "field_tests": [
      "mining_site_trial",
      "defense_convoy_trial"
    ]
  }
}
