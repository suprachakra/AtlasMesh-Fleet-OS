{
  "name": "@atlasmesh/fleet-os",
  "version": "0.1.0",
  "description": "Vehicle-agnostic, Platform-agnostic, Sector-agnostic L4 Fleet Management System",
  "private": true,
  "workspaces": [
    "services/*",
    "ui/*",
    "adapters/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "docker-compose -f deployment/manifests/docker-compose.dev.yml up",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:e2e": "nx run-many --target=e2e --all",
    "lint": "nx run-many --target=lint --all",
    "setup": "./scripts/setup_dev.sh",
    "validate:schemas": "node tools/validate-schemas.js",
    "validate:compat": "node tools/validate-compatibility.js"
  },
  "devDependencies": {
    "@nx/node": "^17.0.0",
    "@nx/web": "^17.0.0",
    "@types/node": "^20.0.0",
    "nx": "^17.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "autonomous-vehicles",
    "fleet-management",
    "middle-east",
    "extreme-weather",
    "l4-autonomy"
  ]
}
