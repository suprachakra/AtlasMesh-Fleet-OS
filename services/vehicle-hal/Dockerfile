# Vehicle Hardware Abstraction Layer (HAL) Service
# Provides vehicle-agnostic interface through config-driven profiles

FROM golang:1.21-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o vehicle-hal ./cmd/main.go

# Final stage
FROM alpine:latest

# Install runtime dependencies
RUN apk --no-cache add ca-certificates tzdata

# Create non-root user
RUN addgroup -g 1001 -S atlasmesh && \
    adduser -u 1001 -S atlasmesh -G atlasmesh

# Set working directory
WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/vehicle-hal .

# Copy vehicle profiles
COPY --from=builder /app/configs ./configs

# Change ownership
RUN chown -R atlasmesh:atlasmesh /app

# Switch to non-root user
USER atlasmesh

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Run the application
CMD ["./vehicle-hal"]
